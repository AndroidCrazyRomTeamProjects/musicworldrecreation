<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_backround_anim"
    android:onClick="TitleClicked"
    android:soundEffectsEnabled="false"
    tools:context=".TitleActivity">


    <ImageView
        android:id="@+id/title_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/title_screen" />

    <TextView
        android:id="@+id/textstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/touch_to_play"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_image"
        android:layout_marginTop="-90dp"
        android:textSize="22sp"
        android:textColor="@color/white"
         />

</RelativeLayout>